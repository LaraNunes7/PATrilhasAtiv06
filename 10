using System;

class Program
{
    static void Main()
    {
        int soma = 0;

        // Loop para somar os números pares entre 1 e 100
        for (int i = 2; i <= 100; i += 2) // Começa em 2 e incrementa de 2 em 2
        {
            soma += i; // Adiciona o número par à soma
        }

        // Exibe a soma
        Console.WriteLine($"A soma dos números pares entre 1 e 100 é: {soma}");

        Console.WriteLine("\nPressione qualquer tecla para sair...");
        Console.ReadKey();
    }
}
