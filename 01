using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("NÃºmeros pares entre 0 e 100:");

        for (int i = 0; i <= 100; i += 2) // Incrementa de 2 em 2 para pegar apenas os pares
        {
            Console.Write(i + " ");
        }

        Console.WriteLine("\n\nPressione qualquer tecla para sair...");
        Console.ReadKey();
    }
}
